<h1>People#index</h1>
<p>Find me in app/views/people/index.html.erb</p>
<div ng-app="app">
  <div ng-controller="peopleCtrl">
  <p>There are ({{people.length}}) people</p>
  <p>There are ({{available}}) people that can be seen</p>
    <div ng-repeat="person in people">
      <h3 ng-click="toggleBio(person)">{{person.name}}</h3>
      <p ng-class="{strike: !person.bioVisible}">{{person.bio}}</p>
      <p>{{person.bioVisible}}</p>
      <button ng-click="removeHuman($index)">Remove this person permanently</button>
    </div>
    <input ng-model="name">
    <input ng-model="bio">
    <button ng-click="addPerson(name,bio)">Click here to add a person</button>
  </div>
  {{ 1 + 1 }}
</div>
